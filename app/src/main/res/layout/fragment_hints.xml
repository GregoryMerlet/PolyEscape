<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryMidLightColor">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/hints"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:textSize="40dp"
        android:id="@+id/hintTitle" />

    <RelativeLayout
        android:id="@+id/askHintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp">
        <RelativeLayout
            android:id="@+id/remainingHintsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.github.lzyzsd.circleprogress.CircleProgress
                android:id="@+id/remainingHintsGauge"
                android:layout_width="100dp"
                android:layout_height="100dp"
                custom:circle_max="5"
                custom:circle_progress="2"
                custom:circle_text_size="0dp"
                custom:circle_finished_color="@color/colorAccent"
                custom:circle_unfinished_color="@color/transparent"/>
            <ImageView
                android:id="@+id/remainingHintsImageView"
                android:layout_marginTop="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_lightbulb_outline_black_24dp"
                android:contentDescription="@string/bulb" />
            <TextView
                android:id="@+id/remainingHints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/remainingHintsGauge"
                android:layout_marginBottom="7dp"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:textColor="@color/primaryTextColor"/>
        </RelativeLayout>

        <Button
            android:id="@+id/askHintButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/remainingHintsLayout"
            android:layout_marginStart="5dp"
            android:textSize="20dp"
            android:text="@string/askHint"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/hintListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hintTitle"
        android:layout_above="@id/askHintLayout"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>